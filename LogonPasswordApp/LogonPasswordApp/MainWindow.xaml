<Window x:Class="LogonPasswordApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Login and Registration Example" Height="400" Width="500">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <TextBlock Text="Login" FontSize="20" Margin="10"/>
            
            <TextBox x:Name="UsernameTextBox" Margin="10"/>
            
            <TextBlock Text="Password" FontSize="20" Margin="10"/>
            
            <PasswordBox x:Name="PasswordTextBox" Margin="10"/>
            
            <Button Content="Login" Click="Login_Click"  Margin="10"/>
                        
            <Button Content="Register" Click="Register_Click" Margin="10"/>
            
            <Button Content="Forgot Password" Click="ForgotPassword_Click" Margin="10"/>
            
        </StackPanel>
    </Grid>
</Window>
